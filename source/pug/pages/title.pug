extends ../components/base/layout

block variables
  -
    const
          title = "title",
          wrapperMods = "",
          hasHeader = false,
          headerMods = "",
          hasPageNav = true,
          pageNavMods = "",
          hasFooter = false,
          footerMods = "",
          currentUrl = "title.html"

  -
    const params = {
      component: {
        mixin: "title",
        name: "Title",
        localName: "Заголовок"
      },
      description: [
        "Везде, где подходит по стилям (тег не обязательно должен быть h-, дефолтный тег span)",
        "Цвет наследуется кроме случаев, когда требуется его явное задание"
      ],
      base: [
    `mixin title(props = {})
    -
      const
            tag = props.tag || "span",
            text = props.text || "",
            modifiers = props.modifiers ? props.modifiers.map((mod) => "title--" + mod) : [];

    #{tag}(class=["title", ...modifiers])&attributes(attributes)!= text`,
    `.title {
      margin: 0;
      padding: 0;
      font-weight: inherit;
      font-size: inherit;
    }`
      ],
      modifiers: [
        {
          summary: "Размер",
          code:
    `&--size {
      &-s {
        font-size: $size-text-s;
      }

      &-m {
        font-size: $size-text-m;
      }

      &-l {
        font-size: $size-text-l;
      }

      &-xl {
        font-size: $size-text-xl;
      }

      &-2xl {
        font-size: $size-text-2xl;
      }

      &-3xl {
        font-size: $size-text-3xl;
      }

      &-4xl {
        font-size: $size-text-4xl;
      }

      &-5xl {
        font-size: $size-text-5xl;
      }

      &-6xl {
        font-size: $size-text-6xl;
      }
    }`
        },
        {
          summary: "Насыщенность",
          code:
    `&--weight {
      &-thin {
        font-weight: $font-weight-text-thin;
      }

      &-light {
        font-weight: $font-weight-text-light;
      }

      &-regular {
        font-weight: $font-weight-text-regular;
      }

      &-medium {
        font-weight: $font-weight-text-medium;
      }

      &-semibold {
        font-weight: $font-weight-text-semibold;
      }

      &-bold {
        font-weight: $font-weight-text-bold;
      }

      &-extrabold {
        font-weight: $font-weight-text-extrabold;
      }

      &-black {
        font-weight: $font-weight-text-black;
      }
    }`
        },
        {
          summary: "Межстрочный интервал",
          note: "Лучше не задавать в %, т.к. бывают баги",
          code:
    `&--line-heigth {
      &-2xs {
        line-height: $line-height-text-2xs;
      }

      &-xs {
        line-height: $line-height-text-xs;
      }

      &-s {
        line-height: $line-height-text-s;
      }

      &-m {
        line-height: $line-height-text-m;
      }

      &-l {
        line-height: $line-height-text-l;
      }
    }`
        },
        {
          summary: "Цвет",
          code:
    `&--color {
      &-primary {
        color: $color-typo-primary;
      }

      &-secondary {
        color: $color-typo-secondary;
      }

      &-ghost {
        color: $color-typo-ghost;
      }

      &-brand {
        color: $color-typo-brand;
      }

      &-system {
        color: $color-typo-system;
      }

      &-normal {
        color: $color-typo-normal;
      }

      &-success {
        color: $color-typo-success;
      }

      &-caution {
        color: $color-typo-caution;
      }

      &-warning {
        color: $color-typo-warning;
      }

      &-alert {
        color: $color-typo-alert;
      }

      &-critical {
        color: $color-typo-critical;
      }
    }`
        },
        {
          summary: "Трансформация текста",
          code:
    `&--transform {
      &-uppercase {
        text-transform: uppercase;
      }

      &-capitalize {
        text-transform: capitalize;
      }

      &-lowercase {
        text-transform: lowercase;
      }
    }`
        },
        {
          summary: "Подчёркивание",
          code:
    `&--underlined {

      // Сплошное

      text-decoration: underline;


      // Непрерывное

      &-no-skip {
        text-decoration: underline;
        text-decoration-skip-ink: none;
        text-decoration-skip: none;
      }


      // Отступ линии от текста

      &-offset {
        &-s {
          text-underline-offset: 0.1em;
        }

        &-m {
          text-underline-offset: 0.2em;
        }

        &-l {
          text-underline-offset: 0.3em;
        }
      }


      // Толщина линии

      &-thickness {
        &-s {
          text-decoration-thickness: 0.1em;
        }

        &-m {
          text-decoration-thickness: 0.2em;
        }

        &-l {
          text-decoration-thickness: 0.3em;
        }
      }
    }`
        }
      ],
      examples: [
        {
          params: {
            tag: "h3",
            text: "Title example",
            modifiers: ["size-2xl", "color-brand", "underlined-no-skip", "weight-bold"]
          },
          stringParams:
    `+title({
      tag: "h3",
      text: "Title example",
      modifiers: ["size-2xl", "color-brand", "underlined-no-skip", "weight-bold"]
    })`
        },
        {
          params: {
            text: "Title example",
            modifiers: ["size-l", "underlined"]
          },
          stringParams:
    `+title({
      text: "Title example",
      modifiers: ["size-l", "underlined"]
    })`
        }
      ]
    }

block page
  +component(params).page__content

block modals
